{
    "builds": [
        {
            "src": "backend/core/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "dist" }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/core/wsgi.py"
        },
        {
            "src": "/admin/(.*)",
            "dest": "backend/core/wsgi.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "backend/core/wsgi.py"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/(.*)\\.(ico|png|jpg|jpeg|svg|css|js)",
            "dest": "/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}
